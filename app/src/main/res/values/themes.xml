<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Tracking" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/material_purple_500</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/white_primary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:colorBackground">@color/white_primary</item>
    </style>

    <style name="TextInput" />

    <style name="TextInput.Layout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxBackgroundColor">@color/grey_zircon</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="android:textColorHint">@color/black_secondary</item>
    </style>

    <style name="TextInput.EditText">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black_primary</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
